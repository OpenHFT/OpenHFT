            </dependency>
            <dependency>
                <groupId>software.chronicle</groupId>
                <artifactId>chronicle-services-api</artifactId>
                <version>${chronicle.services.version}</version>
                <type>jar</type>
            </dependency>

            <dependency>
                <groupId>software.chronicle</groupId>
                <artifactId>chronicle-services-api</artifactId>
                <version>${chronicle.services.version}</version>
