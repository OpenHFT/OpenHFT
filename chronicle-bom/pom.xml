            <dependency>
                <groupId>software.chronicle</groupId>
                <artifactId>chronicle-fix-42</artifactId>
                <version>${chronicle.fix.version}</version>
            </dependency>

            <dependency>
                <groupId>software.chronicle</groupId>
                <artifactId>chronicle-fix-codegenerator</artifactId>
